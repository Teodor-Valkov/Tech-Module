@model IEnumerable<HireOrRent.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>List of Users</h2>

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
        <th>
            @Html.DisplayName("Actions")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (ViewBag.Admins.Contains(item.UserName))
        {
            @:<tr class="info">
        }
        else
        {
            @:<tr>
        }

        <td>
            @item.Id
        </td>
        <td>
            @item.Email
        </td>
        <td>
            @item.FullName
        </td>
        <td>
            @item.RegisterDate.ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-xs" }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-xs" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    }
</table>