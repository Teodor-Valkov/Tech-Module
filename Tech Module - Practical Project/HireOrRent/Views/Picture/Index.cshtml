@model List<HireOrRent.Models.Picture>
@{
    ViewBag.Title = "All website pictures";
}
<h2>Gallery</h2>
<p>
    @Html.ActionLink("Upload new picture", "Upload")
</p>

<table>
    @{
        int j = 0;
        for (int i = 0; i < Model.Count(); i += 4)
        {
            j = i;
            <tr>
                @* I have done this for show 4 images in  a Row *@
                @while (j < i + 4 && j < Model.Count())
                {
                    <td>
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model[j].PictureData,0,Model[j].PictureData.Length)" width="100" height="100" style="margin: 10px" />
                    </td>
                    j++;
                }
            </tr>
        }
    }
</table>