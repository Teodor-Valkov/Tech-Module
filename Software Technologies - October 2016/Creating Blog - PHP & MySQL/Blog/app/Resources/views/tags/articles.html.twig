{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <h1>Searching by tag: {{ tag.name }}</h1>
        <div class="row">
            {% for article in tag.articles %}

                {% if loop.index % 2 == 0 %}
                     <div class="row">
                {% endif %}

                <div class="col-md-6">
                    <article>
                        <header>
                            <h2>{{ article.title }}</h2>
                        </header>

                        <p>
                            {{ article.summary | raw}}
                        </p>
                        <p>
                            {% for tag in article.tags %}
                                <a class="btn btn-default btn-xs" href="{{ path('articles_with_tag', {'name': tag.name}) }}">{{ tag.name }}</a>
                            {% endfor %}
                        </p>
                        <small class="author">
                            {{ article.author }}
                        </small>

                        <footer>
                            <div class="pull-right">
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('article_view', {'id': article.id}) }}">Read more &raquo;</a>
                            </div>
                        </footer>
                    </article>
                </div>

                {% if loop.index % 2 == 0 %}
                    </div>
                {% endif %}

            {% endfor %}
        </div>
    </div>
{% endblock %}
